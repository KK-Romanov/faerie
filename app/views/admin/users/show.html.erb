<div class = "container mt-5">
<h3><%= @user.name %>
     さんの会員詳細</h3>
          <div>
             <%= link_to edit_admin_user_path, class: "badge rounded-pill bg-dark text-warning" do %>
             編集する
              <% end %>
          </div>
          <br>
     <table class="table table-hover">
            <tr>
              <th><b>会員ID</b></th>
                <td><%= @user.id %></td>
            </tr> 
            <tr>
              <th><b>氏名</b></th>
                <td><%= @user.name %>
            </tr>
            <tr>
              <th><b>メールアドレス</b></th>
                 <td><%= @user.email %></td>
            </tr>
            <tr>   
           <th><b>会員ステータス</b></th>
             <td><% if @ser.is_deleted? %>
             <p class="text-danger"><span>退会</span></p>
               <% else %>
            <p class="text-success"><span>有効</span></p>
               <% end %>
              </td>
        </tr>
     </table>
</div     
      
    